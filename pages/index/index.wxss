}

.banner-image {
  height: 100%;
  width: 100%;
}

.separator {
  width: 100%;
  height: 5rpx;
  background-color: #F4F4F4;
}

.tag-bar {
  width: 100%;
  height: 85rpx;
  font-size: 28rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
