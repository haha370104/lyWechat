.tag-item {
  font-size: 28rpx;
  height: 90%;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  width: 130rpx;
  color: #4d5151;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  margin-left: 2.5%;
  margin-right: 2.5%;
  border-bottom: 2rpx solid #ffffff;
}

.tag-item-selected {
  color: #2b2b2b;
  border-bottom: 2rpx solid #2b2b2b;
}

.content-image {
  height: 350rpx;
  width: 100%;
  border-bottom: 1rpx solid #f4f4f4;
  display: block;
